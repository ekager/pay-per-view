<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/button1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="top|start"
            android:alpha="0"
            android:text="1" />

        <Button
            android:id="@+id/button2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="bottom|start"
            android:alpha="0"
            android:text="2" />

        <Button
            android:id="@+id/button3"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="bottom|end"
            android:alpha="0"
            android:text="3" />
    </FrameLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/viewerSalutation"
                style="@style/TitleText"
                android:text="@string/viewer_info_salutation" />

            <TextView
                android:id="@+id/viewerInfoQuestion"
                style="@style/TitleText"
                android:text="@string/viewer_info_question" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@android:drawable/dialog_holo_dark_frame"
                android:ems="16"
                android:hint="@string/name"
                android:inputType="textVisiblePassword|textNoSuggestions|textPersonName"
                android:padding="10dp"
                android:textIsSelectable="false"
                android:textSize="55sp" />

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@android:drawable/dialog_holo_dark_frame"
                android:ems="16"
                android:hint="@string/email"
                android:inputType="textEmailAddress|textNoSuggestions"
                android:padding="10dp"
                android:textIsSelectable="false"
                android:textSize="55sp" />

            <Button
                android:id="@+id/okButton"
                style="@style/okButton"
                android:text="@string/okButton" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

