<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:fontFamily">"sans-serif-condensed"</item>
    </style>

    <style name="TitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textSize">72sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ViewerNumberOption">
        <item name="android:textSize">100sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:drawable/dialog_holo_dark_frame</item>
    </style>

    <style name="LanguageSelector">
        <item name="android:textSize">48sp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:drawable/dialog_holo_dark_frame</item>
    </style>

    <style name="SurveyOption">
        <item name="android:textSize">58sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">30dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:drawable/dialog_holo_dark_frame</item>
    </style>

    <style name="okButton">
        <item name="android:layout_margin">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">48sp</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@android:drawable/dialog_holo_dark_frame</item>
    </style>

    <style name="AdminButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="TableCell">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">32sp</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>
